// Colors - Using CSS variables for theme support
primary-color = var(--primary-color)
secondary-color = var(--secondary-color)
danger-color = var(--danger-color)
success-color = var(--success-color)
text-primary = var(--text-primary)
text-secondary = var(--text-secondary)
bg-primary = var(--bg-primary)
bg-secondary = var(--bg-secondary)
border-color = var(--border-color)
header-bg = var(--header-bg)
header-border = var(--header-border)
header-text = var(--header-text)
header-text-secondary = var(--header-text-secondary)
header-button-bg = var(--header-button-bg)
header-button-border = var(--header-button-border)
header-button-hover-bg = var(--header-button-hover-bg)
header-button-hover-border = var(--header-button-hover-border)

// Spacing
spacing-xs = 0.5rem
spacing-sm = 1rem
spacing-md = 1.5rem
spacing-lg = 2rem
spacing-xl = 3rem

// Breakpoints
mobile-breakpoint = 768px
tablet-breakpoint = 1024px

// Border radius
radius-sm = 0.375rem
radius-md = 0.5rem
radius-lg = 0.75rem

// Shadows - Using CSS variables for theme support
shadow-sm = var(--shadow-sm)
shadow-md = var(--shadow-md)
shadow-lg = var(--shadow-lg)

// RGBA variants for primary color
primary-color-rgba-10 = var(--primary-color-rgba-10)
primary-color-rgba-20 = var(--primary-color-rgba-20)
primary-color-rgba-30 = var(--primary-color-rgba-30)
primary-color-rgba-40 = var(--primary-color-rgba-40)


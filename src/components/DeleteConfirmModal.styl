@import '../styles/variables'

.modal-overlay
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(0, 0, 0, 0.5)
  display flex
  align-items center
  justify-content center
  z-index 1000
  padding spacing-md
  padding-top: unquote('max(' + spacing-md + ', env(safe-area-inset-top))')
  padding-bottom: unquote('max(' + spacing-md + ', env(safe-area-inset-bottom))')
  padding-left: unquote('max(' + spacing-md + ', env(safe-area-inset-left))')
  padding-right: unquote('max(' + spacing-md + ', env(safe-area-inset-right))')

.modal-content
  background-color bg-primary
  border-radius radius-lg
  width 100%
  max-width 500px
  max-height 70vh
  overflow-y auto
  box-shadow shadow-lg

.modal-content-small
  max-width 400px

.modal-header
  display flex
  justify-content space-between
  align-items center
  padding 0.375rem spacing-sm
  border-bottom 1px solid border-color
  height 36px
  min-height 36px
  max-height 36px

  h2
    color text-primary
    font-size 0.75rem
    font-weight 700
    margin 0
    line-height 1

.close-button
  background none
  border none
  font-size 1.5rem
  color text-secondary
  cursor pointer
  line-height 1
  padding 0
  width 24px
  height 24px
  display flex
  align-items center
  justify-content center
  border-radius radius-sm
  transition all 0.2s

  &:hover
    background-color bg-secondary
    color text-primary

.delete-confirm-modal
  text-align center

.delete-confirm-content
  padding spacing-md
  display flex
  flex-direction column
  gap spacing-md
  align-items center

.delete-confirm-icon
  font-size 3rem
  color #ef4444
  margin-bottom spacing-xs

.delete-confirm-message
  color text-primary
  font-size 1rem
  line-height 1.5
  margin 0

.form-actions
  display flex
  gap spacing-sm
  margin-top spacing-sm
  justify-content center

.cancel-button,
.delete-button
  padding spacing-xs spacing-sm
  border none
  border-radius radius-sm
  font-size 0.875rem
  font-weight 500
  transition all 0.2s
  display flex
  align-items center
  justify-content center
  gap 0.375rem
  min-width auto

.cancel-button
  background-color bg-secondary
  color text-primary

  &:hover
    background-color #e5e7eb

.delete-button
  background-color #ef4444
  color white

  &:hover
    background-color #dc2626

  &:active
    transform scale(0.98)

@media (max-width: mobile-breakpoint)
  .modal-overlay
    padding spacing-sm
    padding-top: unquote('max(' + spacing-sm + ', env(safe-area-inset-top))')
    padding-bottom: unquote('max(' + spacing-sm + ', env(safe-area-inset-bottom))')
    padding-left: unquote('max(' + spacing-sm + ', env(safe-area-inset-left))')
    padding-right: unquote('max(' + spacing-sm + ', env(safe-area-inset-right))')

  .modal-content
    max-width 100%
    max-height: unquote('min(70vh, calc(100vh - 1rem - env(safe-area-inset-top) - env(safe-area-inset-bottom)))')
    border-radius radius-md
    margin-top: unquote('env(safe-area-inset-top)')
    margin-bottom: unquote('env(safe-area-inset-bottom)')

  .modal-header,
  .delete-confirm-content
    padding spacing-sm

  .delete-confirm-icon
    font-size 2.5rem


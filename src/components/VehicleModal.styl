@import '../styles/variables'

.modal-overlay
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(0, 0, 0, 0.5)
  display flex
  align-items center
  justify-content center
  z-index 1000
  padding spacing-md
  padding-top: unquote('max(' + spacing-md + ', env(safe-area-inset-top))')
  padding-bottom: unquote('max(' + spacing-md + ', env(safe-area-inset-bottom))')
  padding-left: unquote('max(' + spacing-md + ', env(safe-area-inset-left))')
  padding-right: unquote('max(' + spacing-md + ', env(safe-area-inset-right))')

.modal-content
  background-color bg-primary
  border-radius radius-lg
  width 100%
  max-width 500px
  max-height 70vh
  overflow-y auto
  box-shadow shadow-lg
  transition background-color 0.3s ease

.modal-header
  display flex
  justify-content space-between
  align-items center
  padding 0.375rem spacing-sm
  border-bottom 1px solid border-color
  height 36px
  min-height 36px
  max-height 36px

  h2
    color text-primary
    font-size 0.75rem
    font-weight 700
    margin 0
    line-height 1

.close-button
  background none
  border none
  font-size 1.5rem
  color text-secondary
  cursor pointer
  line-height 1
  padding 0
  width 24px
  height 24px
  display flex
  align-items center
  justify-content center
  border-radius radius-sm
  transition all 0.2s

  &:hover
    background-color bg-secondary
    color text-primary

.vehicle-form
  padding spacing-sm
  display flex
  flex-direction column
  gap spacing-xs

.form-group
  display flex
  flex-direction column
  gap 2px

  label
    color text-primary
    font-weight 600
    font-size 0.7rem
    line-height 1.2

  input, textarea, select
    padding 0.375rem spacing-xs
    border 1px solid border-color
    border-radius radius-sm
    font-size 0.8rem
    transition all 0.2s
    box-sizing border-box

    &:focus
      outline none
      border-color primary-color
      box-shadow 0 0 0 2px primary-color-rgba-10

  input, select
    height 32px

  textarea
    resize vertical
    font-family inherit
    min-height 60px
    line-height 1.4

.form-actions
  display flex
  gap spacing-xs
  margin-top spacing-xs

.cancel-button,
.save-button
  flex 1
  padding 0.375rem spacing-xs
  border none
  border-radius radius-sm
  font-size 0.75rem
  font-weight 500
  transition all 0.2s
  display flex
  align-items center
  justify-content center
  gap 0.25rem
  height 32px

.cancel-button
  background-color bg-secondary
  color text-primary

  &:hover
    background-color #e5e7eb

.save-button
  background-color primary-color
  color white

  &:hover
    background-color secondary-color

  &:active
    transform scale(0.98)

@media (max-width: mobile-breakpoint)
  .modal-overlay
    padding spacing-sm
    padding-top: unquote('max(' + spacing-sm + ', env(safe-area-inset-top))')
    padding-bottom: unquote('max(' + spacing-sm + ', env(safe-area-inset-bottom))')
    padding-left: unquote('max(' + spacing-sm + ', env(safe-area-inset-left))')
    padding-right: unquote('max(' + spacing-sm + ', env(safe-area-inset-right))')

  .modal-content
    max-width 100%
    max-height: unquote('min(70vh, calc(100vh - 1rem - env(safe-area-inset-top) - env(safe-area-inset-bottom)))')
    border-radius radius-md
    margin-top: unquote('env(safe-area-inset-top)')
    margin-bottom: unquote('env(safe-area-inset-bottom)')

  .modal-header,
  .vehicle-form
    padding spacing-sm


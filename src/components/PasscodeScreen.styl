@import '../styles/variables'

.passcode-screen
  min-height 100vh
  display flex
  align-items center
  justify-content center
  background linear-gradient(135deg, primary-color 0%, secondary-color 100%)
  padding spacing-md

.passcode-container
  background bg-primary
  border-radius radius-lg
  padding spacing-xl
  box-shadow shadow-lg
  width 100%
  max-width 400px
  text-align center

  h1
    color primary-color
    margin-bottom spacing-xs
    font-size 2rem
    font-weight 700

  .subtitle
    color text-secondary
    margin-bottom spacing-lg
    font-size 1rem

.passcode-form
  display flex
  flex-direction column
  gap spacing-md

.passcode-input
  width 100%
  padding spacing-sm
  border 2px solid border-color
  border-radius radius-md
  font-size 1rem
  transition all 0.2s

  &:focus
    outline none
    border-color primary-color
    box-shadow 0 0 0 3px primary-color-rgba-10

.submit-button
  width 100%
  padding spacing-xs spacing-sm
  background-color primary-color
  color white
  border none
  border-radius radius-sm
  font-size 0.875rem
  font-weight 500
  transition all 0.2s

  &:hover
    background-color secondary-color

  &:active
    transform scale(0.98)

.error-message
  color danger-color
  font-size 0.875rem
  margin-top -spacing-sm
  text-align left

@media (max-width: mobile-breakpoint)
  .passcode-container
    padding spacing-lg

    h1
      font-size 1.75rem


@import './styles/variables'

// CSS Custom Properties for Light Theme (default)
:root
  --primary-color #2563eb
  --secondary-color #1e40af
  --danger-color #dc2626
  --success-color #16a34a
  --text-primary #1f2937
  --text-secondary #6b7280
  --bg-primary #ffffff
  --bg-secondary #f3f4f6
  --border-color #e5e7eb
  --header-bg rgba(139, 137, 137, 0.95)
  --header-border rgba(115, 113, 113, 0.8)
  --header-text #ffffff
  --header-text-secondary #d1d5db
  --header-button-bg rgba(255, 255, 255, 0.2)
  --header-button-border rgba(255, 255, 255, 0.3)
  --header-button-hover-bg rgba(255, 255, 255, 0.3)
  --header-button-hover-border rgba(255, 255, 255, 0.4)
  --shadow-sm 0 1px 2px 0 rgba(0, 0, 0, 0.05)
  --shadow-md 0 4px 6px -1px rgba(0, 0, 0, 0.1)
  --shadow-lg 0 10px 15px -3px rgba(0, 0, 0, 0.1)
  --primary-color-rgba-10 rgba(37, 99, 235, 0.1)
  --primary-color-rgba-20 rgba(37, 99, 235, 0.2)
  --primary-color-rgba-30 rgba(37, 99, 235, 0.3)
  --primary-color-rgba-40 rgba(37, 99, 235, 0.4)

// CSS Custom Properties for Dark Theme
[data-theme='dark']
  --primary-color #60a5fa
  --secondary-color #93c5fd
  --danger-color #f87171
  --success-color #34d399
  --text-primary #ffffff
  --text-secondary #cbd5e1
  --bg-primary #1e2939
  --bg-secondary #0f172a
  --border-color #475569
  --header-bg rgba(55, 65, 81, 0.95)
  --header-border rgba(75, 85, 99, 0.8)
  --header-text #ffffff
  --header-text-secondary #e2e8f0
  --header-button-bg rgba(255, 255, 255, 0.15)
  --header-button-border rgba(255, 255, 255, 0.25)
  --header-button-hover-bg rgba(255, 255, 255, 0.25)
  --header-button-hover-border rgba(255, 255, 255, 0.35)
  --shadow-sm 0 1px 2px 0 rgba(0, 0, 0, 0.3)
  --shadow-md 0 4px 6px -1px rgba(0, 0, 0, 0.4)
  --shadow-lg 0 10px 15px -3px rgba(0, 0, 0, 0.5)
  --primary-color-rgba-10 rgba(96, 165, 250, 0.15)
  --primary-color-rgba-20 rgba(96, 165, 250, 0.25)
  --primary-color-rgba-30 rgba(96, 165, 250, 0.35)
  --primary-color-rgba-40 rgba(96, 165, 250, 0.45)

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background-color var(--bg-secondary)
  color var(--text-primary)
  line-height 1.5
  transition background-color 0.3s ease, color 0.3s ease

#root
  min-height 100vh

button
  font-family inherit
  cursor pointer

input, select, textarea
  font-family inherit

